{{> header}}
{{> navbar}}

<div class="container mt-4">
  <a href="/add-kabupaten" class="btn btn-success">Add Kabupaten</a>

  <table class="table mt-5">
    <thead>
      <tr>
        <th scope="col">Kabupaten</th>
        <th scope="col">Provinsi</th>
        <th scope="col">Diresmikan</th>
        <th scope="col">Photo</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each kabupatens}}
      <tr>
        <td>Kabupaten {{this.nama_kab}}</td>
        <td>{{this.nama_prov}}</td>
        <td>{{this.diresmikan}}</td>
        <td class="w-25 h-25"><img src="{{this.photo_kab}}" class="w-25 h-25"></td>
        <td>
          <a href="#" type="button" class="btn btn-warning" data-bs-toggle="modal"
            data-bs-target="#exampleModal{{this.id}}">Edit</a>
          <a href="/delete-provinsi/{{this.id}}" type="button" class="btn btn-danger">Delete</a>
        </td>
      </tr>

      {{!-- modal edit --}}
      <div class="modal fade" id="exampleModal{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form method="POST" action="/edit-type">
                <input type="hidden" class="form-control" name="idType" value="{{this.type_id}}">
                <div class="mb-3">
                  <label for="typess" class="form-label">Name Type</label>
                  <input type="text" class="form-control" id="typess" name="editName" value="{{this.name}}">
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-warning">Edit</button>
            </div>
            </form>
          </div>
        </div>
      </div>
      {{/each}}
    </tbody>
  </table>
</div>

{{> footer}}